<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="edu.bluejack20_1.gogames.allCommunity.TopThread">

    <TextView
        android:id="@+id/hotTread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hot Threads"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/slateGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hotTread" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTopThread"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/separator"/>

</androidx.constraintlayout.widget.ConstraintLayout>